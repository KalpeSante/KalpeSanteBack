# =====================================================
# KALPÉ SANTÉ - Environment Variables Template
# =====================================================
# IMPORTANT: Never commit .env file to version control
# Copy this file to .env and fill with actual values
# =====================================================

# ==================== DJANGO CORE ====================
DJANGO_SETTINGS_MODULE=config.settings.development
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-django-secret-key-generator
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Environment: development, staging, production
ENVIRONMENT=development

# ==================== DATABASE ====================
# PostgreSQL Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=kalpe_sante_db
DB_USER=kalpe_user
DB_PASSWORD=strong_password_here
DB_HOST=localhost
DB_PORT=5432

# ==================== REDIS (Cache & Celery) ====================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# ==================== SECURITY ====================
# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7
FIELD_ENCRYPTION_KEY=generate-with-fernet-key-generator

# ==================== PAYMENT GATEWAYS ====================
ORANGE_MONEY_API_KEY=your-orange-money-api-key
WAVE_API_KEY=your-wave-api-key
STRIPE_SECRET_KEY=sk_test_xxxxx

# ==================== MONITORING ====================
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
LOG_LEVEL=INFO

